<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/mainactivity"
    tools:context="com.example.zubrein.final_thesis_poject.MainActivity">


    <EditText
        android:visibility="invisible"
        android:id="@+id/phonr_number"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:gravity="center"
        android:hint="Enter phone number"
        android:textColorHint="#E8E8E8"
        android:background="@drawable/b5"
        android:textColor="#FFF"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.176"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:visibility="invisible"
        android:id="@+id/next"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/b5"
        android:text="next"
        android:textColor="#FFF"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/phonr_number"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.863" />

    <LinearLayout
        android:id="@+id/layout"
        android:visibility="visible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">


        <Button
            android:id="@+id/start"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/b5"
            android:gravity="center"
            android:text="start"
            android:textAlignment="center"
            android:textColor="#FFF"

            />

        <Button
            android:id="@+id/stop"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/b5"
            android:gravity="center"
            android:text="Stop"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:layout_marginBottom="20dp"
            />
        <Button
            android:id="@+id/show"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/b5"
            android:gravity="center"
            android:text="SHow Sensors"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:layout_marginBottom="20dp"
            />
        <Button
            android:id="@+id/save"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/b5"
            android:gravity="center"
            android:text="show Activities"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:layout_marginBottom="20dp"
            />




        <Button
            android:id="@+id/signout"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/b5"
            android:gravity="center"
            android:text="Clear database"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textColor="#A8D9F5"
            android:layout_marginBottom="20dp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Copyright \u00A9 Team SadiaNisa"
        android:textColor="#FFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout"
        app:layout_constraintVertical_bias="0.849" />


</android.support.constraint.ConstraintLayout>
